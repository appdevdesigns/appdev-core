<link href="/styles/font-awesome.css" rel="stylesheet" />   
<link href="/js/bootstrap/css/bootstrap.min.css" rel="stylesheet" />   
<link href="/styles/bootstrap-theme.min.css" rel="stylesheet" />
<link href="/OpsPortal/opsportal.css" rel="stylesheet" />   
<link href="/OpsPortal/opsportal-theme.css" rel="stylesheet" />
<link href="/appdev/login.css" rel="stylesheet" />
<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript" src="/js/bootstrap/js/bootstrap.min.js" ></script>

<% if (authErrMessage) { %>
    <div id="login-message" class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= authErrMessage %>
    </div>
<% } %>
    
<div id="login">

	<div class="container">
		<div class="row" id="head">
			<div class="col-lg-12">
				<p class="icon-title">
				    <img src="/images/appdev.png" class="img"/>
				    <!-- <span>Login</span> -->
				</p>
			</div>	
		</div>
		
		<div class="row">
				<ul class="op-list">
					<li><a form-show="login" href="#login" translate=1>Login</a></li>
				    <% if (canRegister) { %>
					<li><a form-show="signup" href="#singup" translate=1>Sign up</a></li>
					<% } %>
				</ul>			
		</div>
		<div class="row padtop10 border">
			
		</div>
		<div class="mrg-top10">
			<!--Login Form-->
			<div class="row form-display login">
				<div class="col-lg-12">
					<div style="text-align:center">
                        <p translate=1>Enter your username and password <strong>to login</strong></p>
				    </div>
					<div class="logmod_form mrg-top20">
					  <form accept-charset="utf-8" method="post" action="/site/login" class="simform">
					    <input type="hidden" name="_csrf" value="<%= _csrf %>">
						<div class="sminputs">
						  <div class="input full">
							<label class="string optional" for="user-name" translate=1>Username</label>
							<input class="string optional" maxlength="255" id="user-name" placeholder="Username" type="text" size="50" name="username" />
						  </div>
						</div>
						<div class="sminputs">
						  <div class="input full">
							<label class="string optional" for="user-pw" translate=1>Password</label>
							<input class="string optional" maxlength="255" id="user-pw" placeholder="Password" type="password" size="255" name="password" />
						  </div>
						</div>
						<div class="simform_actions">
						  <button class="sumbit" type="submit" translate=1>Log In</button>
						  <span class="simform_actions-sidetext"><a class="special" role="link" href="#"><a translate=1>Forgot your password?</a></span>
						</div> 
					  </form>
					</div> 
					
				</div>	
	
			</div>
			<!--/Login-->
			<!--Sign up-->
			<div class="row form-display signup" style="display:none;">
				<div class="col-lg-12">
					<div style="text-align:center">
                        <p translate=1>Enter your username and password <strong>to create account</strong></p>
                    </div>
					<div class="logmod_form mrg-top20">
					  <form accept-charset="utf-8" method="post" action="/site/user/register" class="simform">
					    <input type="hidden" name="_csrf" value="<%= _csrf %>">
						<div class="sminputs">
						  <div class="input full">
							<label class="string optional" for="user-name" translate=1>Username *</label>
							<input class="string optional" maxlength="255" id="user-email" placeholder="Username" type="text" size="255" name="username" />
						  </div>
						</div>
						<div class="sminputs">
						  <div class="input string optional">
							<label class="string optional" for="user-pw" translate=1>Password *</label>
							<input class="string optional" maxlength="255" id="user-pw" placeholder="Password" type="password" size="255" name="password" />
						  </div>
						  <div class="input string optional">
							<label class="string optional" for="user-pw-repeat" translate=1>Repeat password *</label>
							<input class="string optional" maxlength="255" id="user-pw-repeat" placeholder="Repeat password" type="password" size="255" name="password2" />
						  </div>
						</div>
						<div class="simform_actions">
						  <button class="sumbit" name="commit" type="submit" translate=1>Create Account</button>
						</div> 
					  </form>
					</div>
				</div>		
			</div>
			<!--/sign up-->
		</div>		
	</div>	

</div>

<script>
$(function() {
    // Toggle between Login / Signup
    $('a[form-show]').on('click', function(ev) {
        var form = $(this).attr('form-show');
        $('.form-display').hide();
        $('.form-display').filter('.' + form).show();
        ev.preventDefault();
    });
    
    // Auto-show the Signup form if requested
    if (window.location.href.match('#signup')) {
        $('.form-display').hide();
        $('.form-display').filter('.signup').show();
    }
});
</script>
